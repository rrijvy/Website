
@model AboutUs

<form id="aboutUs-createForm" class="createForm" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="AboutMainSologan"></label>
                <input asp-for="AboutMainSologan" type="text" class="form-control" />
