
@model OurTeam
@{
    Layout = "_Layout";
    ViewData["Title"] = "Our-Team";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Our-Team Information</h4>
        <button id="ourteam-modalBtn" class="btn btn-primary panel-header-create-btn" data-toggle="modal" data-target="#ourTeam-createModal">Create</button>
    </div>
    <div class="panel-body">
        <table id="ourDatatable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Order</th>
                    <th>Image</th>
                    <th>DepartmentName</th>
                    <th>DesignationName</th>
                    <th>Description</th>
                    <th>Facebook</th>
                    <th>Twitter</th>
                    <th>LinkedIn</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="ourTeamTableBody"></tbody>
        </table>
    </div>
</div>



<div id="ourTeam-createModal"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-rx" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Create Team Description</h4>
            </div>
            <div class="modal-body">
                <div id="ourTeam-createFormDiv"></div>
            </div>
        </div>
    </div>
</div>



<div id="ourTeams-editModal"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-rx" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Edit Team Description</h4>
            </div>
            <div class="modal-body">
                <div id="ourTeam-editFormDiv"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
        <div class="modal-content text-center">
            <div class="modal-body">
                <i style="color:#ff3547;margin-top:15px;" class="fa fa-trash fa-3x animated rotateIn"></i>
                <p style="color:black;font-weight:400;margin-top:20px;font-size:14px;">You want to Delete this data ?</p>
            </div>
            <div class="modal-footer">
                <div style="margin-right:70px;">
                    <button style="background:#33b5e5;color:white;" class="btn fa fa-close" data-dismiss="modal">Close</button>
                    <button style="background:#ff3547; color:white;" class="btn waves-effect modaldeleteBtn fa fa-trash" data-dismiss="modal"> Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script src="~/js/OurTeam/ourTeam.js"></script>


}