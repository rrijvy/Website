
@{
     Layout = "_Layout";
    ViewData["Title"] = "Designations";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Designation Information</h4>
        <button id="designation-modalBtn" class="btn btn-primary panel-header-create-btn" data-toggle="modal" data-target="#designation-createModal">Create</button>
    </div>
    <div class="panel-body">
        <table id="designationDatatable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="designationTableBody"></tbody>
        </table>
    </div>
</div>

<div id="designation-createModal"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-rx" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Create Designation Information</h4>
            </div>
            <div class="modal-body">
                <div id="designation-createFormDiv"></div>
            </div>
        </div>
    </div>
</div>

<div id="designation-EditModal"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-rx" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Update Designation Information</h4>
            </div>
            <div class="modal-body">
                <div id="designation-EditFormDiv"></div>
            </div>
        </div>
    </div>
</div>



@section Scripts{


    <script src="~/js/Designation/Desgination.js"></script>



}

