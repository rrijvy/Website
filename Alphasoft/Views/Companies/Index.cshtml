
@{
    Layout = "_Layout";
    ViewData["Title"] = "Company";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-info">Company Information</h4>
        <button id="company-createmodalBtn" class="btn btn-primary panel-header-create-btn" data-toggle="modal" data-target="#companies-createModal">Create</button>
    </div>
    <div class="panel-body">
        <table id="companyDatatable" class="table table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Logo</th>
                    <th>Slogan</th>
                    <th>Address</th>
                    <th>Phone </th>
                    <th>Email</th>
                    <th>Facebook</th>
                    <th>LinkedIn</th>
                    <th>Twitter</th>
                    <th>Youtube</th>
                    <th>Favicon</th>
                    <th>ShortDescription</th>
                    <th>Description</th>
                    <th>GoogleMapLocation</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="companyTableBody"></tbody>
        </table>
    </div>
</div>

<div id="companies-createModal"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-rx" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-info">Create Company Description</h4>
            </div>
            <div class="modal-body">
                <div id="company-createFormDiv"></div>
            </div>
        </div>
    </div>
</div>


<div id="companies-editModal"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-rx" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Edit Company Description</h4>
            </div>
            <div class="modal-body">
                <div id="company-editFormDiv"></div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
        <div class="modal-content text-center">
            <div class="modal-body">
                <i style="color:#ff3547;margin-top:15px;" class="fa fa-trash fa-3x animated rotateIn"></i>
                <p style="color:black;font-weight:400;margin-top:20px;font-size:14px;">You want to Delete this data ?</p>
            </div>
            <div class="modal-footer">
                <div style="margin-right:70px;">
                    <button style="background:#33b5e5;color:white;" class="btn fa fa-close" data-dismiss="modal">Close</button>
                    <button style="background:#ff3547; color:white;" class="btn waves-effect modaldeleteBtn fa fa-trash" data-dismiss="modal"> Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/Company/company.js"></script>


}