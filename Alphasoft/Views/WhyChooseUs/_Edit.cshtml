
@model ChooseUs
<form id="whychoseus-editForm" class="createForm">
    <div class="row">
        <div class="col-md-12">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" type="text" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="description" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription"></label>
                <textarea class="form-control" maxlength="100" asp-for="ShortDescription" placeholder="maximum length 100 Character"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order"></label>
                <input asp-for="Order" type="number" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive"></label>
                <br />
                <input asp-for="IsActive" type="hidden" value="true" />
                <input type="checkbox" id="toggleEditCheckbox" toggle="toggle" data-onstyle="primary" data-offstyle="danger" checked />
            </div>
            <div id="alert"></div>
            <button class="btn btn-success form-control" type="submit">Update</button>
        </div>
    </div>
</form>
  
<script>
    $("#toggleEditCheckbox").bootstrapToggle({
        on: "Enable",
        off: "Disable",
        width:100
    });
    $("#toggleEditCheckbox").change(function () {
        let value = $("#toggleEditCheckbox")[0].checked;
        if (value == true) {
            $('#IsActive').val(true);
            $('#IsActive').attr('data-val', true);
        }
        if (value == false) {
            $('#IsActive').val(false);
            $('#IsActive').attr('data-val', false);
        }
    });

    $(".description").summernote({
        height:100
    });
    $(".shortDescription").summernote({
        height:140
    });
    $("#whychoseus-editForm").on("submit", function (e) {
        e.preventDefault();
        let data = objectifyForm($(this).serializeArray());
        $.ajax({
            url: "/WhyChooseUs/Edit",
            type: "POST",
            data: data,
            success: function (response) {
                $("#choseus-editFormDiv").html(response);
                dataTable.fnFilter();
                $("#choses-editModal").modal('hide');
            }
        });

    });

</script>