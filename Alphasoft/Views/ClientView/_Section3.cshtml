@model List<Product>

<h2 class="font-weight-normal text-color-dark text-center text-7 pb-1 pt-1">Our <strong class="font-weight-extra-bold">Popular</strong> Products</h2>
<div class="row justify-content-center py-2 my-2">
    <div class="col-lg-12">
        @if (Model.Count() > 0)
        {
            <div class="tabs tabs-bottom tabs-center tabs-simple">
                <ul class="nav nav-tabs mb-3">
                    @foreach (var item in Model)
                    {
                        <li class="nav-item appear-animation" data-appear-animation="fadeInLeftShorter" data-appear-animation-delay="200" style="width: 200px; height: 200px;">
                            <a class="nav-link" href="#tabsNavigationSimpleIcons_@item.Id" data-toggle="tab">
                                <img src="@item.Image" class="img-fluid hover-effect-2" alt="" style="width: 75px; height: 65px; object-fit: contain;">
                                <h4 class="font-weight-bold text-color-dark text-3 mb-0 pb-0 mt-2">@item.Name</h4>
                            </a>
                        </li>
                    }
                </ul>

                <div class="tab-content appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="300">
                    @foreach (var item in Model)
                    {
                        <div class="tab-pane" id="tabsNavigationSimpleIcons_@item.Id">
                            <div class="text-center">
                                <p class="lead mb-4">@Html.Raw(item.Description)</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>


<div class="row py-1 my-1">
    <div class="col">
        <h2  class="font-weight-normal text-color-dark text-center text-7 pb-5">Our <strong class="font-weight-extra-bold">TECHNOLOGIES</strong></h2>
        <p style="text-align:justify;margin-top:-20px;"> To meet these challenges and the demands of delivering reliable and high-quality software, this programme offers a unique combination of advanced technical</p>
        <p style="text-align:center;"> knowledge and required management skills.</p>
        <div class="owl-carousel owl-theme mb-0 pt-3">
            <div>
                <img style="height:100px;width:185px;" class="img-fluid " src="~/images/t1.png" alt="">
            </div>
            <div>
                <img style="height:100px;width:185px;" class="img-fluid " src="~/images/t2.png" alt="">
            </div>
            <div>
                <img style="height:100px;width:185px;" class="img-fluid " src="~/images/t3.png" alt="">
            </div>
            <div>
                <img style="height:100px;width:185px;" class="img-fluid " src="~/images/t4.png" alt="">
            </div>
            <div>
                <img style="height:100px;width:185px;" class="img-fluid " src="~/images/t5.png" alt="">
            </div>
            <div>
                <img style="height:100px;width:185px;" class="img-fluid " src="~/images/t6.png" alt="">
            </div>
        </div>
    </div>
</div>

<script>
    var owl = $('.owl-carousel');
    owl.owlCarousel({
        items: 7,
        loop: true,
        margin: 10,
        autoplay: true,
        autoplayTimeout: 1000,
        autoplayHoverPause: true,
        dots: false
    });
</script>
