@model SoftwareViewModel
@{
    ViewData["Title"] = "Softwares";
  //  int SoftwareImageDiv = 0;
    int SoftwareFeaturesIndex = 0;

}


<section class="page-header page-header-modern page-header-background page-header-background-md py-0 overlay overlay-color-dark overlay-show overlay-op-5" style="background-image:url(@Model.SingleSoftware.SoftwareCategory.Image);">
    <div class="container">
        <div class="row">
            <div class="col-sm-5 order-2 order-sm-1 align-self-center p-static">
                <div class="overflow-hidden">
                    <ul class="breadcrumb breadcrumb-light d-block appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="100">
                    </ul>
                </div>
                <div class="overflow-hidden pb-2">
                    <h1 class="text-10 appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="300">Introducing the new <span>@Model.SingleSoftware.Name</span> Software</h1>
                </div>
                <div class="appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                    <span class="sub-title text-4 mt-4">@Model.SingleSoftware.Title</span>
                </div>
                <div class="appear-animation d-inline-block" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                    <a href="#" class="btn btn-modern btn-dark mt-4">Buy Now <i class="fas fa-arrow-right ml-1"></i></a>
                </div>
                <div class="appear-animation d-inline-block" data-appear-animation="rotateInUpRight" data-appear-animation-delay="500">
                    <span class="arrow hlt" style="top: 40px;"></span>
                </div>
            </div>
            <div class="col-sm-7 order-1 order-sm-2 align-items-end justify-content-end d-flex pt-5">
                <div style="min-height: 350px;" class="overflow-hidden">
                    <img alt="" style="height:500px;width:500px;" src="@Model.SingleSoftware.Image" class="img-fluid appear-animation" data-appear-animation="slideInUp" data-appear-animation-delay="600" data-appear-animation-duration="1s">
                </div>
            </div>
        </div>
    </div>
</section>


<div class="container py-5 my-4">
    <div class="row text-center py-3">
        <div class="col-md-10 mx-md-auto">
            <h1 class="word-rotator slide font-weight-bold text-8 mb-3 appear-animation" data-appear-animation="fadeInUpShorter">
                <span>Alphasoft  is software </span>
                <span  class="word-rotator-words bg-primary">
                    <b class="is-visible">Provider</b>
                    <b>Specialized</b>
                    <b>Experienced</b>
                </span>
                <span>partner for your business.</span>
            </h1>
            <p class="lead appear-animation mb-0" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="300">
                Alphasoft Technolgoy Ltd, as a "Provider of Specialized Software Service" Work as an extended experienced partner for your business to deliver professional software.
                Quality Assurance, to Make Sure the Product
                Solves the Right Problem.
            </p>
        </div>
    </div>
</div>
<section class="section section-height-5 bg-primary border-0 pt-5 m-0 appear-animation" data-appear-animation="fadeIn">
    <div class="container">
      

        <div class="row">
            <div class="col">
                <h2 class="mb-4 mt-5 text-12" style="text-align:center;color:white;"> <strong>OUR FEATURES</strong></h2>
                @foreach (var item in Model.SingleSoftware.Features)
                {

                    SoftwareFeaturesIndex += 1;

                    if (SoftwareFeaturesIndex % 2 == 0)
                    {

                        <div class="row align-items-center pt-5 pb-3 appear-animation" data-appear-animation="fadeInRightShorter">
                            <div class="col-md-8 pr-md-5 mb-5 mb-md-0">
                                <h4  style="text-align:justify; color:white;">@Html.Raw(item.Name.Replace("color","white"))</h4>
                            </div>
                            <div class="col-md-4 px-5 px-md-3">
                                <img class="img-fluid scale-2 my-4" style="height:300px;width:330px;" src="@item.IconImage" alt="style switcher" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row align-items-center pt-4 appear-animation" data-appear-animation="fadeInLeftShorter">
                            <div class="col-md-3 mb-4 mb-md-0">
                                <img class="img-fluid scale-2 pr-5 pr-md-0 my-4" style="height:300px;width:330px;" src="@item.IconImage" alt="layout styles" />

                            </div>
                            <div class="col-md-7 pl-md-5">
                          
                                <h4 style="text-align:justify;color:white;">@Html.Raw(item.Name)</h4>
                            </div>
                        </div>

                    }


                }
            </div>
        </div>

    </div>

</section>


<section class="section bg-color-grey-scale-1 border-0 pt-0 pt-md-5 m-0">
    <div class="container">
        <div class="row align-items-center justify-content-center pb-4 pb-lg-0">
            <div class="col-lg-6 order-2 order-lg-1 pr-5 pt-4 pt-lg-0 mt-md-5 mt-lg-0 appear-animation" data-appear-animation="fadeInRightShorter">
                <h2 class="font-weight-normal text-6 mb-3"><strong class="font-weight-extra-bold">@Model.SingleSoftware.SoftwareCategory.Name</strong></h2>
                @if (@Model.SingleSoftware.ShortDescription == null)
                {
                    <p style="text-align:justify;" class="lead">@Html.Raw(Model.SingleSoftware.ShortDescription)</p>
                }
                else
                {
                    <p style="text-align:justify;" class="lead">@Html.Raw(Model.SingleSoftware.ShortDescription)</p>
                }
                <a href="#" class="btn btn-dark font-weight-semibold btn-py-2 px-5">Our History</a>
            </div>
            <div class="col-9 col-lg-6 order-1 order-lg-2 scale-6 pb-5 pb-lg-0 mt-0 mt-md-4 mb-5 mb-lg-0">
                <img style="height:500px;width:500px;margin-left:100px;" class="img-fluid appear-animation" src="@Model.SingleSoftware.SoftwareCategory.Image" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="300" data-plugin-options="{'accY': -400}" alt="">
            </div>
        </div>
    </div>
</section>

