
@{
    Layout = "_Layout";
    ViewData["Title"] = "Software";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-info">Software Information</h4>
        <button id="software-createmodalBtn" class="btn btn-primary panel-header-create-btn" data-toggle="modal" data-target="#software-createModal">Create</button>
    </div>
    <div class="panel-body">
        <table id="softwareDatatable" class="table table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    @*<th>Order</th>*@
                    <th>Icon</th>
                    <th>Image</th>
                    <th>ShortDescription</th>
                    <th>Description </th>
                    <th>SoftwareCategoryName</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="softwareTableBody"></tbody>
        </table>
    </div>
</div>

<div id="software-createModal"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-rx" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-info">Create software Description</h4>
            </div>
            <div class="modal-body">
                <div id="software-createFormDiv"></div>
            </div>
        </div>
    </div>
</div>

<div id="software-editModal"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-rx" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Edit software Description</h4>
            </div>
            <div class="modal-body">
                <div id="software-editFormDiv"></div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h1 style="margin-left:110px;font-size:40px;" class="text-lg-center">
                    <i style="color:#ff4444;" class="fa fa-trash text-center"></i>
                </h1>
                <p style="margin-left:10px;font-size:20px;">You want to Delete this ?</p>
            </div>
            <div class="modal-footer">
                <div style="margin-right:60px;">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    <input style="background-color:#ff4444; color: white;" type="submit" value="Delete" class="btn  modaldeleteBtn" data-id="" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Software/software.js"></script>
}